<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnSpan="0"
    android:layout_gravity="fill"
    android:background="#9C999E"
    android:columnCount="4"
    android:rowCount="7"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="center_horizontal|fill"
        android:background="#1B1919"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="3"
        android:backgroundTint="#776969"
        android:text="/" />

    <Button
        android:id="@+id/buttonRecuperate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:backgroundTint="#194310"
        android:text="MR" />

    <Button
        android:id="@+id/buttonMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:backgroundTint="#194310"
        android:text="M+" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:backgroundTint="#F80421"
        android:text="C" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="1" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="2" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="3" />

    <Button
        android:id="@+id/buttonMultiplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#776969"
        android:text="*" />

    <Button
        android:id="@+id/ButtonFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="4" />

    <Button
        android:id="@+id/ButtonFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:backgroundTint="#28B5D8"
        android:text="5" />

    <Button
        android:id="@+id/ButtonSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:backgroundTint="#28B5D8"
        android:text="6" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#776969"
        android:text="-" />

    <Button
        android:id="@+id/buttonSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="7" />

    <Button
        android:id="@+id/buttonEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="8" />

    <Button
        android:id="@+id/buttonNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="9" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="3"
        android:layout_gravity="fill"
        android:backgroundTint="#776969"
        android:gravity="center|fill"
        android:text="+"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:backgroundTint="#28B5D8"
        android:text="0" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#28B5D8"
        android:text="." />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:backgroundTint="#28B5D8"
        android:text="=" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="CASIO"
            android:textAlignment="center"
            android:textColor="#F4F2F2"
            android:textSize="24sp" />
    </FrameLayout>

</GridLayout>